#include <behaviors.dtsi>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    combos {
        compatible = "zmk,combos";

        alt {
            bindings = <&kp LEFT_ALT>;
            key-positions = <16 17>;
        };

        shift {
            bindings = <&kp LEFT_SHIFT>;
            key-positions = <66 69>;
        };

        copy {
            bindings = <&kp LG(C)>;
            key-positions = <49 50>;
        };

        paste {
            bindings = <&kp LG(V)>;
            key-positions = <50 51>;
        };

        layer1 {
            bindings = <&mo 2>;
            key-positions = <65 70>;
        };
    };

    macros {
        alt1: alt1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp NUMBER_1>,
                <&macro_release>,
                <&kp LEFT_ALT>;

            label = "ALT1";
        };

        alt2: alt2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp NUMBER_2>,
                <&macro_release>,
                <&kp LEFT_ALT>;

            label = "ALT2";
        };

        alt3: alt3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp NUMBER_3>,
                <&macro_release>,
                <&kp LEFT_ALT>;

